{
  "name": "react-native-with-moxy",
  "version": "1.0.0",
  "description": "The https://play.google.com/store/apps/details?id=<package> Android and https://apps.apple.com/us/app/<name>/id<AppleID> iOS apps",
  "author": "MOXY <hello@moxy.studio>",
  "private": true,
  "license": "UNLICENSED",
  "keywords": [
    "app",
    "native"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:{project-org}/{project-name}"
  },
  "scripts": {
    "test": "jest",
    "start:ios:dev": "cross-env ENVFILE=.env.dev react-native run-ios --configuration Debug",
    "start:ios:prod": "cross-env ENVFILE=.env.prod react-native run-ios --configuration Release",
    "start:android:dev": "cross-env ENVFILE=.env.dev react-native run-android --variant devDebug",
    "start:android:prod": "npm run build:android:js:prod && cross-env ENVFILE=.env.prod react-native run-android --variant prodRelease",
    "build:android:js:dev": "react-native bundle --platform android --dev true --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "build:android:js:prod": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "build:android:aab:prod": "npm run build:android:js:prod && cd android && ./gradlew bundleProdRelease || cd -",
    "build:android:aab:qa": "npm run build:android:js:prod && cd android && ./gradlew bundleQaRelease || cd -",
    "build:android:apk": "cd android && ./gradlew assembleProdRelease || cd -",
    "list:ios:simulators": "xcrun simctl list",
    "list:android:simulators": "avdmanager list avd 2>/dev/null || emulator -list-avds 2>/dev/null || echo 'Not found in PATH: avdmanager and emulator'",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin HEAD",
    "lint": "eslint --ignore-path .gitignore .",
    "pods": "cd ios/ && pod install || cd -"
  },
  "dependencies": {
    "@react-native-community/masked-view": "^0.1.7",
    "@react-navigation/native": "^5.0.9",
    "@react-navigation/stack": "^5.1.1",
    "react": "16.9.0",
    "react-intl": "^4.1.1",
    "react-native": "0.61.5",
    "react-native-config": "^0.12.0",
    "react-native-gesture-handler": "^1.6.0",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/runtime": "7.3.4",
    "@commitlint/config-conventional": "^8.0.0",
    "@moxy/eslint-config": "^10.1.1",
    "@moxy/jest-config": "^2.0.0",
    "babel-jest": "^24.5.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "commitlint": "^8.0.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.3.0",
    "husky": "^4.2.0",
    "jest": "^24.5.0",
    "jest-enzyme": "^7.0.2",
    "jest-in-case": "^1.0.2",
    "jsdom": "^15.0.0",
    "lint-staged": "^10.0.2",
    "metro-react-native-babel-preset": "^0.56.0",
    "react-dom": "^16.8.3",
    "standard-version": "^7.1.0"
  },
  "optionalDependencies": {
    "ios-deploy": "^1.9.4"
  }
}
